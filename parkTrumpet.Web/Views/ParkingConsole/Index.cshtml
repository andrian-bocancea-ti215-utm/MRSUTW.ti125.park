@using parkTrumpet.Web.Models
@model ParkingConsoleModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Ajax.BeginForm("PCTable", new AjaxOptions { HttpMethod = "POST",
                 InsertionMode = InsertionMode.Replace,
                 UpdateTargetId = "insert" }))
{
    SelectList parkingSelectList = new SelectList(Model.ParkingList, "Name", "Name");
@Html.DropDownListFor(m => m.Parking, parkingSelectList)
@Html.TextBoxFor(m => m.RegistrationNumber)

<input type="submit" name="submit" value="arrival" />
<input type="submit" name="submit" value="departure" />
}
<div id="insert">
    @Html.Partial("PCTable",Model)
</div>

